<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_dialog_login1"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录或注册"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:id="@+id/other_login_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/login_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/DialogTextView"
            android:drawableLeft="@mipmap/ic_qq"
            android:text="QQ" />
        <TextView
            android:id="@+id/login_weibo"
            style="@style/DialogTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_weibo"
            android:text="微博"
            />
        <TextView
            android:id="@+id/login_weixin"
            style="@style/DialogTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_weixin"
            android:text="微信"
            />
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱或手机号"
            android:textSize="13sp"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="2dp"
            android:background="@drawable/selector_edit_bg"
            android:textCursorDrawable="@drawable/bg_input_cusor_1"
            android:textColor="@color/orange"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码（不少于6位）"
            android:textSize="13sp"
            android:visibility="gone"
            android:maxLines="1"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="2dp"
            android:background="@drawable/selector_edit_bg"
            android:textCursorDrawable="@drawable/bg_input_cusor_1"
            android:textColor="@color/orange"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名"
            android:textSize="13sp"
            android:maxLines="1"
            android:visibility="gone"
            android:maxLength="10"
            android:paddingBottom="2dp"
            android:background="@drawable/selector_edit_bg"
            android:textCursorDrawable="@drawable/bg_input_cusor_1"
            android:textColor="@color/orange"/>
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/logon"
            style="@style/DialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="注册"
            android:textColor="@android:color/black"
            android:gravity="center_vertical|left"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            style="@style/DialogTextView"
            android:text="登录"
            android:textColor="@color/orange"
            android:gravity="center_vertical|right"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/finnish_logon"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            style="@style/DialogTextView"
            android:text="注册"
            android:textColor="@color/orange"
            android:visibility="gone"
            android:gravity="center_vertical|right"/>
        <TextView
            android:layout_alignParentRight="true"
            style="@style/DialogTextView"
            android:id="@+id/m_login"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="账号登录"
            android:textColor="@color/orange"
            android:visibility="gone"
            android:gravity="center_vertical|right"/>
        <TextView
            android:layout_toLeftOf="@id/login"
            android:layout_marginRight="16dp"
            style="@style/DialogTextView"
            android:id="@+id/other_login"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="社交账号登录"
            android:textColor="@android:color/black"
            android:gravity="center_vertical|right"/>
    </RelativeLayout>
</LinearLayout>